{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "baseUrl": "src/",
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "typings/app.d.ts"],
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  }
}
